<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.krishagni.catissueplus.bulkoperator.domain.BulkOperationJob" 
    table="JOB_DETAILS">
    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">JOB_DETAILS_SEQ</param>
      </generator>
    </id>

    <property 
      name="status" 
      column="JOB_STATUS"/>

    <property 
      name="logFile" 
      type="java.sql.Blob" 
      column="LOG_FILE"/>

    <property 
      name="startTime" 
      column="START_TIME"/>

    <many-to-one 
      name="startedBy" 
      class="com.krishagni.catissueplus.core.administrative.domain.User"
      column="JOB_STARTED_BY"/>

    <property 
      name="name" 
      column="JOB_NAME"/>

    <property 
      name="timeTaken" 
      column="TIME_TAKEN"/>

    <property 
      name="failedRecordsCount" 
      column="FAILED_RECORDS_COUNT"/>

    <property 
      name="totalRecordsCount" 
      column="TOTAL_RECORDS_COUNT"/>

    <property 
      name="processedRecords" 
      column="CURRENT_RECORDS_PROCESSED"/>
    
    <property 
      name="trackingId" 
      column="TRACKING_ID"/>
        
    <property 
      name="logFileName" 
      column="LOG_FILE_NAME"/>

    <query name="getAllJobs">
      from 
        com.krishagni.catissueplus.bulkoperator.domain.BulkOperationJob 
      order by
        id desc	
    </query>
    
    <query name="getJobByTrackingId">
      from 
        com.krishagni.catissueplus.bulkoperator.domain.BulkOperationJob 
      where
        trackingId = :trackingId
    </query>
  </class>
</hibernate-mapping>
