<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.2.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">
    
  <bean id="boDaoFactory" class="com.krishagni.catissueplus.bulkoperator.repository.impl.DaoFactoryImpl">
    <property name="sessionFactory" value="#{sessionFactoryBuilder.getSessionFactory()}"/>
  </bean>
  
  <bean id="bulkOperationService" class="com.krishagni.catissueplus.bulkoperator.services.impl.BulkOperationServiceImpl">
    <property name="daoFactory" ref="boDaoFactory"/>
    <property name="userDao" ref="userDao"/>
    <property name="importerFactory" ref="importerFactory"/>
  </bean>

  <bean id="importerFactory" class="com.krishagni.catissueplus.bulkoperator.services.impl.ObjectImporterFactoryImpl">
    <property name="importersMap">
      <map>
        <entry key="CollectionProtocolRegistrationDetail" value-ref="cprImporter"/>
        <entry key="ScgDetail" value-ref="scgImporter"/>
        <entry key="SpecimenDetail" value-ref="specimenImporter"/>
        <entry key="UpdateSpecimenDto" value-ref="updateSpecimenImporter"/>
        <entry key="UpdateSpecimenByLabelDto" value-ref="updateSpecimenByLabelImporter"/>
        <entry key="CreateAliquotDto" value-ref="createAliquotImporter"/>
        <entry key="UpdateCprDto" value-ref="updateRegImporter"/>
        <entry key="DERecordInformation" value-ref="deImporter"/>
      </map>
    </property>
  </bean>
  
  <bean id="cprImporter" class="com.krishagni.catissueplus.bulkoperator.services.impl.CprImporter">
	<property name="cprSvc" ref="cprSvc"/>
  </bean>
  
  <bean id="scgImporter" class="com.krishagni.catissueplus.bulkoperator.services.impl.ScgImporter">
	<property name="scgSvc" ref="specimenCollGroupService"/>
  </bean>
  
  <bean id="specimenImporter" class="com.krishagni.catissueplus.bulkoperator.services.impl.SpecimenImporter">
	<property name="specimenService" ref="specimenSvc"/>
  </bean>
  
  <bean id="updateSpecimenImporter" class="com.krishagni.catissueplus.bulkoperator.services.impl.UpdateSpecimenImporter">
	<property name="specimenService" ref="specimenSvc"/>
  </bean>
  
  <bean id="updateSpecimenByLabelImporter" class="com.krishagni.catissueplus.bulkoperator.services.impl.UpdateSpecimenByLabelImporter">
	<property name="specimenService" ref="specimenSvc"/>
  </bean>
  
  <bean id="createAliquotImporter" class="com.krishagni.catissueplus.bulkoperator.services.impl.CreateAliquotImporter">
	<property name="specimenService" ref="specimenSvc"/>
  </bean>
  
  <bean id="deImporter" class="com.krishagni.catissueplus.bulkoperator.services.impl.DEImporter">
	<property name="formSvc" ref="formSvc"/>
  </bean>
  
  <bean id="updateRegImporter" class="com.krishagni.catissueplus.bulkoperator.services.impl.UpdateRegistrationImporter">
	<property name="cprSvc" ref="cprSvc"/>
  </bean>
</beans>