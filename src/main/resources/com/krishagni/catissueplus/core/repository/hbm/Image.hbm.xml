<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
    <class
        name="com.krishagni.catissueplus.core.administrative.domain.Image"
        table="CATISSUE_IMAGE" lazy="true">
    
    	<cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null">
            <generator class="native">
                <param name="sequence">CAT_IMG_SEQ</param>
            </generator>
        </id>
        
      <property
            name="description"
            type="string"
            column="DESCRIPTION"
            length="1000"
        />
    <property
            name="eqpImageId"
            type="string"
            column="EQP_IMAGE_ID"
            length="100"
            not-null="true"
        />
  <property
            name="height"
            type="long"
            column="HEIGHT"
            length="20"
        />
  
   <property
            name="lastUpdateDate"
            type="date"
            column="LAST_UPDATE_DATE"
        />
  
   <property
            name="quality"
            type="long"
            column="QUALITY"
            length="20"
        />
        
    <property
            name="resolution"
            type="string"
            column="RESOLUTION"
            length="50"
        />
  
   <property
            name="scanDate"
            type="date"
            column="SCAN_DATE"
        />
  
   <property
            name="stainName"
            type="string"
            column="STAIN_NAME"
            length="500"
        />
        
    <property
            name="status"
            type="string"
            column="STATUS"
            length="55"
        />

	 <property
            name="width"
            type="long"
            column="WIDTH"
            length="20"
        />  
 	 <property
            name="imageType"
            type="string"
            column="IMAGE_TYPE"
            length="100"
        />
        
         <property
            name="fullLocUrl"
            type="string"
            column="FULL_LOC_URL"
            length="200"
            not-null="true"
        />
        
        <property
            name="activityStatus"
            type="string"
            column="ACTIVITY_STATUS"
            length="20"
        />
     <!--
        <property name="thumbnail" 
        lazy="true" 
        column="THUMBNAIL" />
        
          -->  
        
     
        
        <many-to-one name="specimen"
			class="com.krishagni.catissueplus.core.biospecimen.domain.Specimen"
			
			column="SPECIMEN_ID" />
        
       <many-to-one name="equipment"
			class="com.krishagni.catissueplus.core.administrative.domain.Equipment"
			column="EQUIPMENT_ID" />
			
       <query name="getEquipmentImageId">
    	SELECT img FROM com.krishagni.catissueplus.core.administrative.domain.Image img WHERE 
    	img.eqpImageId = :eqpImageId
       </query>
    
       </class>

</hibernate-mapping>
